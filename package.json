{
  "name": "bootstrap-admin",
  "description": "Open source responsive background management template based on bootstrap 5",
  "version": "2.0.1",
  "engines": {
    "node": "^18.18.0"
  },
  "scripts": {
    "docs:dev": "vitepress dev src/docs",
    "docs:build": "vitepress build src/docs",
    "docs:preview": "vitepress preview src/docs",
    "rollup": "rollup --config rollup.config.js  --bundleConfigAsCjs",
    "prettier": "prettier --config prettier.config.mjs  src/{js/**/*.js,mock/**/*.js,scss/**/*.scss,docs/**/*.md} --check --cache --cache-location .cache/.prettiercache",
    "prettier:fix": "prettier --config prettier.config.mjs src/{js/**/*.js,mock/**/*.js,scss/**/*.scss,docs/**/*.md} --write",
    "stylelint": "stylelint --config stylelint.config.mjs src/scss/**/*.scss --cache --cache-location .cache/.stylelintcache",
    "stylelint:fix": "stylelint --config stylelint.config.mjs src/scss/**/*.scss --fix",
    "css:compile": "sass --style expanded --source-map --embed-sources --no-error-css src/scss:dist/css",
    "css:prefix": "postcss --config postcss.config.mjs --replace \"dist/css/*.css\"  \"!dist/css*.min.css\"",
    "css:min": "cleancss -O1  --format breakWith=lf --with-rebase  --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css:banner": "cross-env NODE_NO_WARNINGS=1 node build/css-banner.mjs",
    "css": "run-s css:compile css:prefix css:min css:banner",
    "eslint": "cross-env NODE_NO_WARNINGS=1 eslint --config eslint.config.mjs src/{js/**/*.js,mock/**/*.js} --cache --cache-location .cache/.eslintcache --report-unused-disable-directives",
    "eslint:fix": "cross-env NODE_NO_WARNINGS=1 eslint --config eslint.config.mjs src/{js/**/*.js,mock/**/*.js}  --fix",
    "js:base": "cross-env NODE_NO_WARNINGS=1 rollup --config rollup.config.mjs",
    "js:prod": "cross-env NODE_ENV=production NODE_NO_WARNINGS=1 rollup --config rollup.config.mjs",
    "page:clean": "del-cli dist/*.html",
    "page:compile": "node build/html.mjs",
    "page:beautify": "js-beautify --no-preserve-newlines -m -1 -s 2 --type html --replace dist/*.html",
    "page": "run-s page:clean page:compile page:beautify",
    "img": "node build/img.mjs",
    "script": "cpy src/script/* dist/js",
    "watch:css": "nodemon --delay 2500ms --watch src/scss --ext scss --exec \"npm run css\"",
    "watch:page": "nodemon --delay 2500ms --watch src/pages --ext twig --exec \"npm run page:compile\"",
    "watch:img": "nodemon --delay 2500ms --watch src/img --ext * --exec \"npm run img\"",
    "watch:js": "nodemon --delay 2500ms --watch src/{js/*,mock/*} --ext js --exec \"npm run js:base\"",
    "watch:script": "nodemon --watch src/script --ext js --exec \"npm run script\"",
    "watch": "run-p watch:*",
    "server": "node build/server.mjs",
    "dev": "concurrently \"npm run server\" \"npm run watch\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ajiho/bootstrap-admin.git"
  },
  "keywords": [
    "bootstrap",
    "bootstrap5",
    "css",
    "responsive",
    "admin",
    "template",
    "control-panel",
    "dashboard"
  ],
  "homepage": "https://github.com/ajiho/bootstrap-admin",
  "author": "ajiho",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@eslint/js": "^9.2.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.19",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "browser-sync": "^3.0.2",
    "clean-css-cli": "^5.6.3",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "del": "^7.1.0",
    "del-cli": "^5.1.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.1",
    "globals": "^15.4.0",
    "imagemin": "^9.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^10.0.1",
    "jquery": "^3.7.1",
    "js-beautify": "^1.15.1",
    "mockjs": "^1.1.0",
    "nodemon": "^3.1.3",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-strip-banner": "^3.1.0",
    "sass": "^1.77.5",
    "stylelint": "^16.6.1",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "twig": "^1.17.1",
    "vitepress": "^1.2.3"
  }
}
